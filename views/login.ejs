<%- include('partials/header') %>

  <div class="container mt-5">
    <h1 class="josefin-sans-1 ">Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email" class="josefin-sans-1">Email</label>
                <input type="email" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                <label for="password" class="josefin-sans-1">Password</label>
                <input type="password" class="form-control" name="password" required>
              </div>
              <% if (typeof error !== 'undefined') { %>
                <p><%= error %></p>
              <% } %>
              <div class="d-flex flex-wrap justify-content-between mt-2 gap-2">
                <button type="submit" class="btn btn-warning">Login</button>
                <a href="/register" class="btn btn-outline-warning">Create Account</a>
              </div>
            </form>

          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <a class="btn btn-block" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
               <h3 class="josefin-sans-1 mt-2">Sign In with Google</h3>
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>