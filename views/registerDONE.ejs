<!DOCTYPE html>
<html lang="en" dir="ltr" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="/images/favicon.png">
  <link rel="stylesheet" href="styles/main.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100..700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&display=swap" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <title>BookNotes</title>
</head>

<body>
  <header class="py-3 mb-3 border-bottom">
    <div class="container-fluid d-flex flex-column gap-3 align-items-center" style="grid-template-columns: 1fr 2fr;">
      <div class="d-flex align-items-center">
        <a href="/" >
          <img src="images/favicon.png" alt="book icon" class="mb-3" width="48px">
        </a>
        <h1 class="text-orange mt-2 josefin-sans-1">BookNotes</h1>
      </div>
    </div>
  </header>

<div class="container mt-5">
  <h1 class="josefin-sans-1">Register</h1>

  <div class="row justify-content-between">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email" class="josefin-sans-1">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password" class="josefin-sans-1">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div>
            <% if (typeof error !== 'undefined') { %>
              <p><%= error %></p>
            <% } %>
            <div class="d-flex flex-row flex-wrap justify-content-between mt-2 ">
              <button type="submit" class="btn btn-warning">Register</button>
              <div class="d-flex g-2 justify-content-md-between flex-column flex-md-row" style="gap: 4px;">
                <h6 class="mt-3 pe-1 align-items-center josefin-sans-1 ps-2">Do you have an account?</h6>
                <a href="/login" class="btn btn-outline-warning">Log in Here</a>
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
             <h3 class="josefin-sans-1 mt-2">Sign In with Google</h3>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

</body>
</html>

